@import '../../style/main.wxss';
.flipper {
  transition: 0.6s;
  transform-style: preserve-3d;
  padding: 15rpx 45rpx;
}

.front {
  backface-visibility: hidden;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx 45rpx;
  width: 514rpx;
  height: 750rpx;
  overflow: hidden;
  border-radius: 50rpx;
  box-shadow: 2rpx 4rpx 24rpx #686868;
  z-index: 2;
  background: url('https://ss1.bdstatic.com/70cFuXSh_Q1YnxGkpoWK1HF6hhy/it/u=3424074551,2621199076&fm=15&gp=0.jpg');
  background-size: 100% 100%;
}

.back {
  backface-visibility: hidden;
  position: absolute;
  top: 0;
  left: 0;
  margin: 15rpx 45rpx;
  width: 514rpx;
  height: 750rpx;
  background-size: 100%;
  overflow: hidden;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 16rpx #686868;
  transform: rotateY(180deg);
}

.add-journalBook-icon {
  width: 84rpx;
  height: 84rpx;
  margin: 274rpx 0 38rpx;
}

.add-journalBook-text {
  font-size: 30rpx;
  color: #a0a0a0;
}

.input-title {
  color: rgb(58, 65, 73);
  font-size: 30rpx;
  text-align: center;
  font-weight: 800;
  font-style: oblique;
  font-variant: small-caps;
  font-family: '微软雅黑';
  font-stretch: extra-condensed;
  margin: 20px 5px 5px 5px;
}

.input {
  margin-top: 52rpx;
  padding: 0 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f5f5f5;
  font-size: 30rpx;
  color: #6c6c6c;
}

.background-title {
  position: relative;
  right: -22rpx;
  bottom: -17rpx;
  color: #808085;
  font-size: 26rpx;
  margin-top: 8rpx;
  margin-bottom: 23rpx;
}

.book-cover-flex-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 0 15rpx;
}

.book-cover-container {
  margin: 15rpx 8rpx;
  height: 100rpx;
  width: 100rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 4rpx #808085;
}

.book-cover {
  background-size: 100%;
  width: 100%;
  height: 100%;
}

.return-button-container {
  background-color: #58a9e3;
  height: 210rpx;
  width: 210rpx;
  border-radius: 100%;
  position: absolute;
  bottom: -105rpx;
  left: -105rpx;
  transition: transform ease-in 0.08s, box-shadow ease-in 0.05s;
}

.return-button-container:active {
  transform: scale(0.92);
  box-shadow: 0 0 40rpx #58a9e3;
}

.return-button {
  position: absolute;
  top: 38rpx;
  right: 43rpx;
  height: 37rpx;
  width: 37rpx;
}

.width {
  height: 325px;
  width: 210px;
  border-radius: 30%;
}
